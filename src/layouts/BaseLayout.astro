---
import '../styles/global.css';
import Lightbox from '../components/Lightbox.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Personal photography portfolio and blog by Dan Cardamore' } = Astro.props;
const canonicalURL = Astro.site ? new URL(Astro.url.pathname, Astro.site) : null;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;700&family=Newsreader:ital,opsz,wght@0,6..72,400..700;1,6..72,400..700&display=swap" rel="stylesheet" />

    <title>{title}</title>
    <meta name="description" content={description} />
    {canonicalURL && <link rel="canonical" href={canonicalURL} />}

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {canonicalURL && <meta property="og:url" content={canonicalURL} />}
    <meta property="og:site_name" content="Dan Cardamore" />
    <meta property="og:type" content="website" />
  </head>
  <body class="min-h-screen font-sans" style="background-color: var(--color-bg-main); color: var(--color-text-main);">
    <header>
      <nav class="container mx-auto px-6 py-6">
        <div class="flex items-center justify-between">
          <a href="/" class="text-xl font-serif font-medium hover:opacity-70 transition-opacity">
            Dan Cardamore
          </a>
          <ul class="flex gap-8 text-sm font-serif">
            <li>
              <a href="/" class="hover:underline hover:underline-offset-2 transition-all">Home</a>
            </li>
            <li>
              <a href="/portfolio" class="hover:underline hover:underline-offset-2 transition-all">Portfolio</a>
            </li>
            <li>
              <a href="/blog" class="hover:underline hover:underline-offset-2 transition-all">Blog</a>
            </li>
          </ul>
        </div>
      </nav>
    </header>

    <main class="container mx-auto px-6 py-12">
      <slot />
    </main>

    <footer class="mt-24">
      <div class="container mx-auto px-6 py-8">
        <p class="text-sm opacity-70 text-center">
          Â© {new Date().getFullYear()} Dan Cardamore. All rights reserved.
        </p>
      </div>
    </footer>

    <Lightbox />
  </body>
</html>
