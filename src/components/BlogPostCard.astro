---
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, pubDate, author } = post.data;

const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="group border-b border-gray-200 pb-8">
  <a href={`/blog/${post.id}`} class="block space-y-3">
    <div class="space-y-2">
      <h2 class="text-2xl font-normal group-hover:text-gray-600 transition-colors">
        {title}
      </h2>
      <div class="flex gap-4 text-sm text-gray-500">
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        <span>by {author}</span>
      </div>
    </div>
    <p class="text-gray-700">{description}</p>
    <span class="text-sm text-gray-500 group-hover:text-gray-700 transition-colors">
      Read more â†’
    </span>
  </a>
</article>
