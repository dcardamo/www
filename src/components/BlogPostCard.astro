---
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { title, description, pubDate, author } = post.data;

const formattedDate = new Date(pubDate).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="group pb-8">
  <a href={`/blog/${post.id}`} class="block space-y-3">
    <div class="space-y-2">
      <h2 class="text-2xl font-normal group-hover:opacity-70 transition-opacity">
        {title}
      </h2>
      <div class="flex gap-4 text-sm" style="color: var(--color-text-muted);">
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
        <span>by {author}</span>
      </div>
    </div>
    <p>{description}</p>
    <span class="text-sm group-hover:opacity-70 transition-opacity" style="color: var(--color-text-muted);">
      Read more â†’
    </span>
  </a>
</article>
